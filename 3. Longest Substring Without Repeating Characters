class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        int n= s.size();
        int ans=0;
        unordered_map<char, int>ch; 
        int i=0, j=0;
        while(j<n){
            ch[s[j]]++;
            if(ch.size() == j-i+1){
                ans= max( ans, j-i+1);
            }
            else if(ch.size()<j-i+1){
                while(ch.size()<j-i+1){
                    ch[s[i]]--;
                    if(ch[s[i]]==0){
                        ch.erase(s[i]);
                    }
                    i++;
                }
            }
            j++;   
        }
        return ans;    
    }
};
